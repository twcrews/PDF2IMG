<Window x:Class="PDF2IMG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDF2IMG"
        mc:Ignorable="d"
        Title="PDF to Image" Height="450" Width="450" Background="#333" ResizeMode="CanMinimize"
         AllowDrop="True" Drop="Grid_Drop" DragOver="Grid_DragOver" DragEnter="Grid_DragOver">
    <Grid>
        <TextBlock x:Name="infoTextBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Drop a PDF file here, or click the button below to browse." VerticalAlignment="Top" Foreground="#BBB" FontSize="18" TextAlignment="Center" Margin="65,140,65,0"/>
        <local:CustomButton Width="100" Height="50" Margin="0,0,0,130" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="Browse" MouseDown="CustomButton_MouseDown"/>
        <Label x:Name="successLabel" Content="" HorizontalAlignment="Center" Margin="0,0,0,90" VerticalAlignment="Bottom" Foreground="#BBB"/>
    </Grid>
</Window>
